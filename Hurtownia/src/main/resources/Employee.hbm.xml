<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "bd.lab.Employee" table = "pracownicy">
      
      <meta attribute = "class-description">
         This class contains the client detail. 
      </meta>
      
      <id name = "id" type = "int" column = "idPracownika">
         <generator class="native"/>
      </id>
      
      <property name = "name" column = "imie" type = "string"/>
      <property name = "surname" column = "nazwisko" type = "string"/>
      <property name = "position" column = "stanowisko" type = "int"/>
      
   </class>
</hibernate-mapping>